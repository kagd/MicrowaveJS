<!doctype html>
<html>
<head>
    <title>{blogtitle}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="/public/base.css" />
    <link rel="stylesheet" href="/public/theme/theme.css" />
    <link rel="stylesheet" href="/public/theme/prettify-theme.css" />
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.5.3/modernizr.min.js"></script>
    {head|s}
</head>
<body class="post">

    <div class="wrapper">
        <header>
            <h1><a href="/">{blogtitle}</a></h1>
            <span class="desc">{blogdesc}</span>
            <a class="rss" href="/rss"><span class="websymbols">B</span>RSS</a>
        </header>

        <aside class="left">{leftsidebar}</aside>

        <nav class="post">
            {#prevPost}<a href="{url}" class="prev-post" title="{title} - {date}">(</a>{/prevPost}
            <a href="/" title="Return to Index">:</a>
            {#nextPost}<a href="{url}" class="next-post" title="{title} - {date}">)</a>{/nextPost}
        </nav>

        <article class="post">
            <h1>{title}</h1>
            <span class="date">{date}</span>
            <ul class="tags">
                {#tags}<li><a href="/tagged/{.|uc}">{.}</a></li>{/tags}
            </ul>
            {body|s}
            <div id="disqus_thread"></div>
        </article>

        <aside class="right">{rightsidebar}</aside>

        <footer>Powered by <a target="_blank" href="https://github.com/tstone/MicrowaveJS">MicrowaveJS</a></footer>
    </div>

    {#comments}
    <script type="text/javascript">
        var disqus_shortname = '{disqusname}';
        var disqus_identifier = '{slug}';
        var disqus_url = '{disqusurl}';
        var disqus_title = '{title}';

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
    {/comments}

    <script src="/public/prettify.js"></script>
    <script>prettyPrint();</script>

    {#analytics}
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', '{analytics}']);
          {#analyticsdomain}_gaq.push(['_setDomainName', '{analyticsdomain}']);{/analyticsdomain}
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>
    {/analytics}
</body>
</html>